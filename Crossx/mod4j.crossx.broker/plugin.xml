<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="CrossxBuilder"
         name="Crossx Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="mod4j.crossx.broker.builder.CrossxBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="CrossxNature"
         name="Crossx Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="mod4j.crossx.broker.builder.CrossxNature">
         </run>
      </runtime>
      <builder
            id="mod4j.crossx.broker.CrossxBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="mod4j.crossx.broker.contribution1">
         <action
               label="Add/Remove Sample Nature"
               class="mod4j.crossx.broker.builder.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="mod4j.crossx.broker.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Crossx Category"
            id="mod4j.crossx.broker">
      </category>
      <view
            name="Crossx View"
            icon="icons/sample.gif"
            category="mod4j.crossx.broker"
            class="mod4j.crossx.broker.views.CrossxView"
            id="mod4j.crossx.broker.views.CrossxView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="mod4j.crossx.broker.views.CrossxView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
