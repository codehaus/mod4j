<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4" id="WebApp_1238750140203">

	<display-name>Rosa's Breakfast Shop</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:breakfastPresentatieLaagContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!--
		<filter> <filter-name>openSessionInViewFilter</filter-name>
		<filter-class>
		org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
		</filter> <filter-mapping>
		<filter-name>openSessionInViewFilter</filter-name>
		<url-pattern>/breakfast/*</url-pattern> </filter-mapping>
	-->

	<filter>
		<filter-name>Wicket</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationFactoryClassName</param-name>
			<param-value>
				org.apache.wicket.spring.SpringWebApplicationFactory
			</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Wicket</filter-name>
		<url-pattern>/breakfast/*</url-pattern>
	</filter-mapping>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/breakfastDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
