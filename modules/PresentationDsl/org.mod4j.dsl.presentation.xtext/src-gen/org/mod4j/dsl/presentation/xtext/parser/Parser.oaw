<workflow>
    <property name="doCheck" value="true"/>
    <bean class="org.eclipse.mwe.emf.StandaloneSetup"/>
    <bean class="org.mod4j.dsl.presentation.xtext.MetaModelRegistration"/>
	<component id="PresentationDsl-parser" class="org.mod4j.dsl.presentation.xtext.parser.ParserComponent">
		<modelFile value="${modelFile}"/>
		<outputSlot value="${outputSlot}"/>
	</component>
	<if cond="${doCheck}">
		<component id="PresentationDsl-checker" class="oaw.check.CheckComponent">
	       <metaModel id="mm" class="org.eclipse.m2t.type.emf.EmfRegistryMetaModel"/>
	       <expression value="${outputSlot}.eAllContents.union({${outputSlot}})"/>
		   <checkFile value="org::mod4j::dsl::presentation::xtext::GenChecks"/>
		   <checkFile value="org::mod4j::dsl::presentation::xtext::Checks"/>
		</component>
	</if>
</workflow>
