<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "/opt/jars/spring/dist/spring-beans.dtd">

<beans>
	<bean id="ForumRepositoryTest" class="nl.ordina.forum.integratie.spring.ForumRepositoryTest">
		<property name="forumRepository" ref="forumRepository"/>
	</bean>

	<bean id="forumRepository" class="nl.ordina.forum.integratie.spring.ForumRepository">
		<constructor-arg><ref local="forumDao"/></constructor-arg>
	</bean>


    <bean id="forumDao" class="nl.ordina.forum.integratie.spring.dao.ForumDaoImpl" >
    	<constructor-arg><ref local="sessionFactory"/></constructor-arg>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">

        <property name="dataSource"><ref local="dataSource"/></property>
        <property name="mappingResources">
            <list>
                <value>Post.hbm.xml</value>
                <value>Forum.hbm.xml</value>
            </list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.DerbyDialect</prop>
				<prop key="hibernate.hbm2ddl.auto">create-drop</prop>
				<prop key="show_sql">true</prop>
				<prop key="hibernate.cache.use_second_level_cache">false</prop>
			</props>
		</property>
    </bean>
    
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    	<property name="sessionFactory"><ref local="sessionFactory"/></property>
	</bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName"><value>org.apache.derby.jdbc.EmbeddedDriver</value></property>
        <property name="url"><value>jdbc:derby:forumdb;create=true</value></property>
    </bean>

</beans>
