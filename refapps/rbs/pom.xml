    </dependency>
  </dependencies>
  <properties>
  	<spring.version>2.5.5</spring.version>
    <jetty.version>6.1.4</jetty.version>
    <wicket.version>1.3.4</wicket.version>
    <jpox.version>1.2.2</jpox.version>
    <jpox-springframework.version>1.2.0</jpox-springframework.version>
  </properties>
</project>