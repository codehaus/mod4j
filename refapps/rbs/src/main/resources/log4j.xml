		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Query" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Lifecycle" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Reachability" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Cache" additivity="false">
