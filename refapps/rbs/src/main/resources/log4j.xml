		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Management" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.General" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Connection" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.JCA" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Transaction" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Plugin" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Store.Poid" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Datastore" additivity="false">
		<level value="info"/>
