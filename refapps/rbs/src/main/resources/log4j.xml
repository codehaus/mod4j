	</category>
	<category name="JPOX.Persist" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.Retrieve" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<!--category name="JPOX.Enhancer" additivity="false">
		<level value="info"/>
		<appender-ref ref="ASYNC"/>
	</category>
	<category name="JPOX.SchemaTool" additivity="false">
